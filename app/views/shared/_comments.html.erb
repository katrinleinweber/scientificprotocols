<div class="list-group">
  <% comments.each do |comment| %>
    <h4 class="list-group-item-heading">
      <%= comment.user.login %>
      <small>commented <%= time_ago_in_words(comment.updated_at) %> ago</small>
    </h4>
    <p class="list-group-item-text"><%= comment.body %></p>
  <% end %>
</div>