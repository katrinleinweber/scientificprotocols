<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#sp-navbar-collapse">
        <span class="sr-only"><%= t('views.shared.masthead.sr_toggle_nav') %></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t('views.shared.masthead.link_to_home_brand'), root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="sp-navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to t('views.shared.masthead.link_to_home'), root_path %>
        </li>
        <li class="<%= 'active' if current_page?(protocols_path) %>">
          <%= link_to t('views.shared.masthead.link_to_protocols'), protocols_path %>
        </li>
      </ul>
      <%= form_tag protocols_path, method: :get, class: 'navbar-form navbar-left', role: 'search' do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], class: 'form-control',
                placeholder: t('views.shared.masthead.placeholder_search') %>
        </div>
        <%= button_tag t('views.shared.masthead.submit'), name: nil, type: 'submit', class: 'btn btn-default' %>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to t('views.shared.masthead.link_to_account'), user_path(current_user) %></li>
          <li><%= link_to t('views.shared.masthead.link_to_help'), '/wiki_home' %></li>
          <li><%= link_to t('views.shared.masthead.link_to_signout'), signout_path %></li>
        <% else %>
          <li><%= link_to t('views.shared.masthead.link_to_signin'), signin_path %></li>
          <li><%= link_to t('views.shared.masthead.link_to_help'), '/wiki_home' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>