<% managed_by = protocol.users.first %>
<div class="row margin-bottom-10">
  <div class="col-xs-7">
    <% if fork_of.present? %>
      <%= t('views.protocols.tagline.fork_of_html', link_to_protocol: link_to(fork_of.title, fork_of)) %>
      <div class="clearfix"></div>
    <% end %>
    <% if protocol.tag_list.present? %>
      <% protocol.tag_list.each do |tag| %>
        <span class="label label-default"><%= tag %></span>
      <% end %>
    <% end %>
  </div>
  <div class="col-xs-5">
    <% if managed_by.present? %>
      <p class="text-right">
        <%= t('views.protocols.tagline.managed_by_html',
              link_to_user: link_to(managed_by.username, user_path(managed_by.slug)),
              time: time_ago_in_words(protocol.updated_at)
            ) %>
      </p>
    <% end %>
  </div>
</div>