<%= render partial: 'shared/page_title', locals: { page_title: 'Resend unlock instructions' } %>

<%= bootstrap_form_for(
      resource, as: resource_name,
      url: unlock_path(resource_name),
      inline_errors: false,
      html: { method: :post, style: 'width:400px' }
    ) do |f| %>
    <%= f.alert_message t('errors.messages.not_saved') %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    <div class="form-group">
      <%= f.submit 'Resend unlock instructions', class: 'btn btn-primary' %>
    </div>
<% end %>

<%= render 'devise/shared/links' %>
