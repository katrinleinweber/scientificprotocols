<%= render partial: 'shared/page_title', locals: { page_title: 'Change your password' } %>

<div class="row">
  <div class="col-md-4">
    <%= bootstrap_form_for(
          resource, as: resource_name,
          url: password_path(resource_name),
          inline_errors: false,
          html: { method: :put }
        ) do |f| %>
      <%= f.alert_message t('errors.messages.not_saved') %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, autofocus: true, label: 'New password', autocomplete: 'off', placeholder: 'Password', help: 'Must be at least 8 characters long' %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', label: 'Confirm new password', placeholder: 'Password confirmation' %>
      <div class="form-group">
        <%= f.submit 'Change my password', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>
