<%= render partial: 'shared/page_title', locals: { page_title: 'Forgot your password?' } %>

<div class="row">
  <div class="col-md-4">
    <%= bootstrap_form_for(
          resource, as: resource_name,
          url: password_path(resource_name),
          inline_errors: false,
          html: { method: :post }
        ) do |f| %>
      <%= f.alert_message t('errors.messages.not_saved') %>
      <%= f.text_field :login, autofocus: true, placeholder: 'Email or username' %>
      <div class="form-group">
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>
