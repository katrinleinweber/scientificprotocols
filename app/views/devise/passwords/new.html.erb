<%= render partial: 'shared/page_title', locals: { page_title: 'Forgot your password?' } %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form', style: 'width:400px' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
