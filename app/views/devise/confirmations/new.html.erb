<%= render partial: 'shared/page_title', locals: { page_title: 'Resend confirmation instructions' } %>

<%= bootstrap_form_for(
      resource, as: resource_name,
      url: confirmation_path(resource_name),
      inline_errors: false,
      html: { method: :post, style: 'width:400px' }
    ) do |f| %>
    <%= f.alert_message t('errors.messages.not_saved') %>
    <%= f.text_field :login, autofocus: true, placeholder: 'Email or username' %>
    <div class="form-group">
      <%= f.submit 'Resend confirmation instructions', class: 'btn btn-primary' %>
    </div>
<% end %>

<%= render 'devise/shared/links' %>
