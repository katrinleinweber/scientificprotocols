<!DOCTYPE html>
<html>
<head>
  <title>
    <%= t('views.layouts.application.page_title_prefix') %>
    <%= yield_or_default(:title, t('views.layouts.application.page_title_default')) %>
  </title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= content_for :head_style %>
  <%= javascript_include_tag 'application' %>
  <%= content_for :head_js %>
  <meta name=viewport content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <%= render partial: 'shared/masthead' %>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <div class="<%= 'container' unless controller.controller_name == 'home' %>">
    <%= yield %>
  </div>
  <div class="container">
    <%= render partial: 'shared/footer' %>
  </div>
  <%= javascript_include_tag 'application_footer' %>
  <%= render partial: 'shared/google_analytics' if Rails.env.production? %>
</body>
</html>
